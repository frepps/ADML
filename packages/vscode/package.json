{
  "name": "adml-vscode",
  "displayName": "ADML",
  "description": "Language support for ADML (Article Data Markup Language)",
  "version": "0.3.0",
  "publisher": "adml",
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "adml",
        "aliases": [
          "ADML",
          "adml"
        ],
        "extensions": [
          ".adml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "adml",
        "scopeName": "source.adml",
        "path": "./syntaxes/adml.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "adml",
        "path": "./snippets/adml.json"
      }
    ]
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "dev": "tsc -watch -p ./tsconfig.json",
    "package": "npx @vscode/vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0"
  }
}