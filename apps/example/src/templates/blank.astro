---
import type { ADMLResult } from '@adml/parser';
import BaseLayout from '../layouts/BaseLayout.astro';
import ContentRenderer from '../components/renderer/ContentRenderer.astro';

interface Props {
  data: ADMLResult;
}

const { data } = Astro.props;
---

<BaseLayout title={data.title ?? ''}>
  <div class="article-content">
    <ContentRenderer items={data.content ?? []} />
  </div>
</BaseLayout>
